{
  "packages": [
    "packages/*"
  ],
  "useWorkspaces": true,
  "npmClient": "yarn",
  "npmClientArgs": [
    "--no-lockfile",
    "--registry=https://www.npmjs.com"
  ],
  "command": {
    "publish": {
      "npmClient": "npm",
      "verifyAccess": false,
      "registry": "https://www.npmjs.com"
    },
    "bootstrap": {
      "registry": "https://www.npmjs.com",
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "version": "0.0.1"
}
