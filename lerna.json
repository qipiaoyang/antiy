{
  "packages": [
    "packages/*"
  ],
  "useWorkspaces": true,
  "npmClient": "yarn",
  "npmClientArgs": [
    "--no-lockfile",
    "--registry=https://www.npmjs.com"
  ],
  "command": {
    "publish": {
      "npmClient": "npm",
      "verifyAccess": false,
      "registry": "https://registry.npmjs.org/"
    },
    "bootstrap": {
      "registry": "https://registry.npmjs.org/",
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "version": "independent"
}
